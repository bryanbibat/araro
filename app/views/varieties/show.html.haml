%h1= @variety.name

%p
  %strong Common Name:
  %br
  = @variety.common_name
%p
  %strong Line Designation:
  %br
  = @variety.line_designation
%p
  %strong Year Approved:
  %br
  = @variety.year_approved
%p
  %strong Breeding Institution:
  %br
  = @variety.breeding_institution.name

- if user_signed_in? and current_user.can_plant?
  %p= link_to "Buy Seedlings", plant_variety_url(@variety), method: :post, confirm: "Are you sure you want to plant this?", class: "btn"
